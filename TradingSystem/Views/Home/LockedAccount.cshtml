@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Locked</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #141921 0%, #1a2332 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            overflow: hidden;
        }

        .background-pattern {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            opacity: 0.05;
            background-image: radial-gradient(circle at 25% 25%, #c3972e 2px, transparent 2px), radial-gradient(circle at 75% 75%, #c3972e 1px, transparent 1px);
            background-size: 50px 50px, 25px 25px;
            animation: drift 20s ease-in-out infinite alternate;
        }

        @@keyframes drift {
            0%

        {
            transform: translate(0, 0);
        }

        100% {
            transform: translate(10px, 10px);
        }

        }

        .container {
            background: rgba(20, 25, 33, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(195, 151, 46, 0.2);
            border-radius: 24px;
            padding: 4rem 3rem;
            text-align: center;
            max-width: 500px;
            width: 90%;
            position: relative;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5), 0 0 100px rgba(195, 151, 46, 0.1), inset 0 1px 0 rgba(255, 255, 255, 0.1);
            animation: slideUp 0.8s ease-out;
        }

        @@keyframes slideUp {
            0%

        {
            opacity: 0;
            transform: translateY(50px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .lock-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 2rem;
            position: relative;
            animation: pulse 2s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        }

        .lock-icon::before {
            content: '';
            position: absolute;
            width: 40px;
            height: 50px;
            border: 4px solid #c3972e;
            border-radius: 20px 20px 8px 8px;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            background: transparent;
        }

        .lock-icon::after {
            content: '';
            position: absolute;
            width: 60px;
            height: 40px;
            background: linear-gradient(135deg, #c3972e, #d4a332);
            border-radius: 8px;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            box-shadow: 0 4px 15px rgba(195, 151, 46, 0.3), inset 0 2px 0 rgba(255, 255, 255, 0.2);
        }

        .lock-keyhole {
            position: absolute;
            width: 8px;
            height: 8px;
            background: #141921;
            border-radius: 50%;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
        }

            .lock-keyhole::after {
                content: '';
                position: absolute;
                width: 2px;
                height: 8px;
                background: #141921;
                top: 8px;
                left: 50%;
                transform: translateX(-50%);
            }

        h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            background: linear-gradient(135deg, #c3972e, #f4c945);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-shadow: 0 0 30px rgba(195, 151, 46, 0.5);
        }

        .message {
            font-size: 1.1rem;
            line-height: 1.6;
            color: #b8c5d1;
            margin-bottom: 2.5rem;
        }

        .status-indicator {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(195, 151, 46, 0.1);
            border: 1px solid rgba(195, 151, 46, 0.3);
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            font-size: 0.9rem;
            color: #c3972e;
            font-weight: 500;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            background: #c3972e;
            border-radius: 50%;
            animation: blink 1.5s ease-in-out infinite;
        }

        @@keyframes blink {
            0%, 100%

        {
            opacity: 1;
        }

        50% {
            opacity: 0.3;
        }

        }

        .decorative-line {
            width: 100px;
            height: 1px;
            background: linear-gradient(90deg, transparent, #c3972e, transparent);
            margin: 2rem auto;
            animation: shimmer 3s ease-in-out infinite;
        }

        .home-button {
            background: transparent;
            border: 2px solid rgba(195, 151, 46, 0.3);
            color: #c3972e;
            padding: 0.875rem 1.75rem;
            border-radius: 12px;
            font-size: 0.95rem;
            font-weight: 500;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            margin-top: 2rem;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            backdrop-filter: blur(10px);
            letter-spacing: 0.025em;
        }

            .home-button::before {
                content: '';
                position: absolute;
                inset: 0;
                background: linear-gradient(135deg, rgba(195, 151, 46, 0.1), rgba(195, 151, 46, 0.05));
                border-radius: 10px;
                opacity: 0;
                transition: opacity 0.4s ease;
            }

            .home-button:hover::before {
                opacity: 1;
            }

            .home-button:hover {
                border-color: rgba(195, 151, 46, 0.6);
                color: #d4a332;
                transform: translateY(-1px);
                box-shadow: 0 8px 25px rgba(195, 151, 46, 0.15);
            }

            .home-button:active {
                transform: translateY(0);
                border-color: #c3972e;
            }

        .home-icon {
            width: 16px;
            height: 16px;
            transition: transform 0.3s ease;
            opacity: 0.9;
        }

        .home-button:hover .home-icon {
            transform: translateX(-2px);
            opacity: 1;
        }

        @@keyframes shimmer {
            0%, 100%

        {
            opacity: 0.3;
        }

        50% {
            opacity: 1;
        }

        }

        .floating-particles {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            pointer-events: none;
        }

        .particle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: #c3972e;
            border-radius: 50%;
            opacity: 0.6;
            animation: float 8s linear infinite;
        }

            .particle:nth-child(1) {
                left: 10%;
                animation-delay: -2s;
            }

            .particle:nth-child(2) {
                left: 30%;
                animation-delay: -4s;
            }

            .particle:nth-child(3) {
                left: 50%;
                animation-delay: -6s;
            }

            .particle:nth-child(4) {
                left: 70%;
                animation-delay: -1s;
            }

            .particle:nth-child(5) {
                left: 90%;
                animation-delay: -3s;
            }

        @@keyframes float {
            0%

        {
            transform: translateY(100vh) rotate(0deg);
            opacity: 0;
        }

        10% {
            opacity: 0.6;
        }

        90% {
            opacity: 0.6;
        }

        100% {
            transform: translateY(-100vh) rotate(360deg);
            opacity: 0;
        }

        }

        @@media (max-width: 640px) {
            .container

        {
            padding: 3rem 2rem;
        }

        h1 {
            font-size: 2rem;
        }

        .lock-icon {
            width: 60px;
            height: 60px;
        }

            .lock-icon::before {
                width: 30px;
                height: 40px;
                border-width: 3px;
            }

            .lock-icon::after {
                width: 45px;
                height: 30px;
            }

        }
    </style>
</head>
<body>
    <div class="background-pattern"></div>
    <div class="floating-particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>

    <div class="container">
        <div class="lock-icon">
            <div class="lock-keyhole"></div>
        </div>

        <h1>Locked out</h1>

        <div class="decorative-line"></div>

        <p class="message">
            This account has been locked out, please try again later.
        </p>

        <div class="status-indicator">
            <div class="status-dot"></div>
            Account Temporarily Locked
        </div>

        <button class="home-button" onclick="window.location.href='/Home'">
            <svg class="home-icon" viewBox="0 0 24 24" fill="none">
                <path d="M3 12L5 10M5 10L12 3L19 10M5 10V20A1 1 0 006 21H9M19 10L21 12M19 10V20A1 1 0 0018 21H15M9 21V16A1 1 0 0110 15H14A1 1 0 0115 16V21M9 21H15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            Return to Home
        </button>
    </div>
</body>
</html>