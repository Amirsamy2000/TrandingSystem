@using System.Security.Claims
@using TrandingSystem.Application.Dtos
@inject IHttpContextAccessor HttpContextAccessor
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<CourseDto>

@{
    var currentUICulture = System.Threading.Thread.CurrentThread.CurrentUICulture;
    var requestCulture = HttpContextAccessor.HttpContext.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture.Culture.Name;

    ViewData["Title"] = "Courses";
    var isRtl = currentCulture == "ar" ? true : false; //ViewBag.language_code == 2;
    var dirAttribute = isRtl ? "rtl" : "ltr";
    var textAlign = isRtl ? "text-end" : "text-start";
    var textAlignReverse = isRtl ? "text-start" : "text-end";
    var marginStart = isRtl ? "me-auto" : "ms-auto";
    var marginEnd = isRtl ? "ms-auto" : "me-auto";
    var paddingStart = isRtl ? "pe-3" : "ps-3";
    var paddingEnd = isRtl ? "ps-3" : "pe-3";
    var borderStart = isRtl ? "border-end" : "border-start";


    var userIdClaim = User.FindFirst(ClaimTypes.NameIdentifier);
    int? userId = userIdClaim != null ? int.Parse(userIdClaim.Value) : (int?)null;
}

<style>
    .course-link {
        text-decoration: none;
        color: #222;
        transition: color 0.3s ease, transform 0.2s ease;
    }

        .course-link:hover {
            color: #0d6efd; /* أزرق أنيق */
            transform: translateX(4px); /* يتحرك شوية لليمين عند الـhover */
        }

        .course-link .card-title {
            font-weight: bold;
            margin: 0;
        }

    /* Category Modal Styles */
    .category-modal .modal-dialog {
        max-width: 900px;
    }

    .category-card {
        background: linear-gradient(145deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 20px;
        padding: 2rem 1.5rem;
        text-align: center;
        color: white;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        position: relative;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(102, 126, 234, 0.3);
        opacity: 0;
        transform: translateY(30px) scale(0.95);
    }

        .category-card:hover {
            transform: translateY(-8px) scale(1.05);
            box-shadow: 0 20px 60px rgba(102, 126, 234, 0.4);
        }

        .category-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .category-card:hover::before {
            left: 100%;
        }

        .category-card.all-category {
            background: linear-gradient(145deg, #28a745 0%, #20c997 100%);
            box-shadow: 0 8px 32px rgba(40, 167, 69, 0.3);
        }

            .category-card.all-category:hover {
                box-shadow: 0 20px 60px rgba(40, 167, 69, 0.4);
            }

        .category-card .category-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            display: block;
        }

        .category-card .category-name {
            font-size: 1.1rem;
            font-weight: 600;
            margin: 0;
        }

        .category-card.show {
            opacity: 1;
            transform: translateY(0) scale(1);
        }

    .change-category-btn {
        position: fixed;
        top: 50%;
        right: 20px;
        transform: translateY(-50%);
        z-index: 1050;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 50px;
        padding: 15px 20px;
        color: white;
        font-weight: 600;
        box-shadow: 0 4px 20px rgba(102, 126, 234, 0.4);
        transition: all 0.3s ease;
    }

        .change-category-btn:hover {
            transform: translateY(-50%) scale(1.1);
            box-shadow: 0 8px 30px rgba(102, 126, 234, 0.6);
            color: white;
        }

    [dir="rtl"] .change-category-btn {
        right: auto;
        left: 20px;
    }

    .modal-backdrop.show {
        opacity: 0.7;
    }

    .category-modal .modal-content {
        border: none;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .category-modal .modal-header {
        border: none;
        padding: 2rem 2rem 0 2rem;
        background: transparent;
    }

    .category-modal .modal-body {
        padding: 1rem 2rem 2rem 2rem;
    }

    .selected-category-indicator {
        position: fixed;
        top: 120px;
        left: 50%;
        transform: translateX(-50%);
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        z-index: 1040;
        display: none;
    }

    /* Course section fade animation */
    .courses-section.fade-out {
        opacity: 0.3;
        transform: scale(0.98);
        transition: all 0.5s ease;
    }

    .courses-section.fade-in {
        opacity: 1;
        transform: scale(1);
        transition: all 0.5s ease;
    }
</style>

<!-- Selected Category Indicator -->
<div id="selectedCategoryIndicator" class="selected-category-indicator" dir="@dirAttribute">
    <i class="fas fa-filter me-2"></i>
    <span id="selectedCategoryText"></span>
</div>

<!-- Change Category Button -->
<button id="changeCategoryBtn" class="change-category-btn" onclick="openCategoryModal()" dir="@dirAttribute">
    <i class="fas fa-th-large @(isRtl ? "ms-2" : "me-2")"></i>
    @if (isRtl)
    {
        <span>تغيير الفئة</span>
    }
    else
    {
        <span>Change Category</span>
    }
</button>

<section class="courses-section py-5 bg-light" dir="@dirAttribute" id="coursesSection">
    <div class="container">
        <!-- Page Header -->
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold text-primary mb-3">
                    @if (isRtl)
                    {
                        <span>الدورات المتاحة</span>
                    }
                    else
                    {
                        <span>Available Courses</span>
                    }
                </h1>
                <p class="lead text-muted">
                    @if (isRtl)
                    {
                        <span>اكتشف مجموعتنا الواسعة من الدورات التدريبية المتخصصة</span>
                    }
                    else
                    {
                        <span>Discover our comprehensive collection of specialized training courses</span>
                    }
                </p>
            </div>
        </div>

        <!-- Courses Grid -->
        <div class="row g-4" id="coursesGrid">
            @if (Model != null && Model.Any())
            {
                @foreach (var course in Model)
                {
                    <div class="col-12 col-md-6 col-lg-4 course-item" data-category="@course.categoryName">
                        <div class="card h-100 shadow-sm border-0 course-card">
                            <!-- Course Image -->
                            <div class="position-relative overflow-hidden">
                                @if (!string.IsNullOrEmpty(course.ImageCourseUrl))
                                {
                                    <img src="@course.ImageCourseUrl"
                                         class="card-img-top course-image"
                                         alt="@(isRtl ? (course.TitleAR ?? course.TitleEN ?? "صورة الدورة") : (course.TitleEN ?? course.TitleAR ?? "Course Image"))"
                                         style="height: 200px; object-fit: cover; transition: transform 0.3s ease;">
                                }
                                else
                                {
                                    <div class="card-img-top d-flex align-items-center justify-content-center bg-secondary text-white"
                                         style="height: 200px;">
                                        <i class="fas fa-graduation-cap fa-3x opacity-50"></i>
                                    </div>
                                }

                                <!-- Category Badge -->
                                @if (!string.IsNullOrEmpty(course.categoryName))
                                {
                                    <div class="position-absolute top-0 @(isRtl ? "start-0" : "end-0") m-3">
                                        <span class="badge bg-primary px-3 py-2 rounded-pill">
                                            @course.categoryName
                                        </span>
                                    </div>
                                }

                                <!-- Cost Badge -->
                                @if (course.Cost != 0)
                                {
                                    <div class="position-absolute bottom-0 @(isRtl ? "end-0" : "start-0") m-3">
                                        <span class="badge bg-success px-3 py-2 rounded-pill fw-bold">
                                            @if (isRtl)
                                            {
                                                <span>@course.Cost.ToString("C") ر.س</span>
                                            }
                                            else
                                            {
                                                <span>$@course.Cost.ToString("F2")</span>
                                            }
                                        </span>
                                    </div>
                                }
                                else
                                {
                                    <div class="position-absolute bottom-0 @(isRtl ? "end-0" : "start-0") m-3">
                                        <span class="badge bg-success px-3 py-2 rounded-pill fw-bold">
                                            @if (isRtl)
                                            {
                                                <span>مجاني</span>
                                            }
                                            else
                                            {
                                                <span>Free</span>
                                            }
                                        </span>
                                    </div>
                                }
                            </div>

                            <div class="card-body d-flex flex-column @paddingStart @paddingEnd">
                                <!-- Course Title -->
                                <a href="/Home/CourseDetails?CourseId=@course.CourseId" class="course-link">
                                    <h5 class="card-title @textAlign">
                                        @if (isRtl)
                                        {
                                            <span>@(course.TitleAR ?? course.TitleAR ?? "عنوان الدورة غير متوفر")</span>
                                        }
                                        else
                                        {
                                            <span>@(course.TitleEN ?? course.TitleAR ?? "Course Title Not Available")</span>
                                        }
                                    </h5>
                                </a>


                                <!-- Course Description -->
                                <p class="card-text text-muted flex-grow-1 @textAlign" style="line-height: 1.6;">
                                    @if (isRtl)
                                    {
                                        var description = course.DescriptionAR ?? course.DescriptionEN ?? "وصف الدورة غير متوفر في الوقت الحالي";
                                        if (description.Length > 120)
                                        {
                                            <span>@(description.Substring(0, 120))...</span>
                                        }
                                        else
                                        {
                                            <span>@description</span>
                                        }
                                    }
                                    else
                                    {
                                        var description = course.DescriptionEN ?? course.DescriptionAR ?? "Course description is not available at the moment";
                                        if (description.Length > 120)
                                        {
                                            <span>@(description.Substring(0, 120))...</span>
                                        }
                                        else
                                        {
                                            <span>@description</span>
                                        }
                                    }
                                </p>

                                <!-- Course Info Footer -->
                                <div class="mt-auto pt-3 border-top">
                                    <div class="row align-items-center g-0">
                                        <div class="col">
                                            @if (!string.IsNullOrEmpty(course.categoryName))
                                            {
                                                <small class="text-muted @textAlign">
                                                    <i class="fas fa-tag @(isRtl ? "ms-1" : "me-1")"></i>
                                                    @course.categoryName
                                                </small>
                                            }
                                        </div>
                                        <div class="col-auto">
                                            @if (course.Cost != 0)
                                            {
                                                <div class="@textAlignReverse">
                                                    <span class="h6 text-success fw-bold mb-0">
                                                        @if (isRtl)
                                                        {
                                                            <span>@course.Cost.ToString("N0") ر.س</span>
                                                        }
                                                        else
                                                        {
                                                            <span>$@course.Cost.ToString("N2")</span>
                                                        }
                                                    </span>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="@textAlignReverse">
                                                    <span class="h6 text-success fw-bold mb-0">
                                                        @if (isRtl)
                                                        {
                                                            <span>مجاني</span>
                                                        }
                                                        else
                                                        {
                                                            <span>Free</span>
                                                        }
                                                    </span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- Action Button -->
                                <div class="d-flex gap-3 mt-3 mb-3">
                                    <!-- Go To Course Button -->
                                    @if (course.CourseEnrollments.Any(ce => ce.UserId == userId && ce.OrderStatus == 1))
                                    {
                                        <button class="btn flex-fill fw-semibold py-2"
                                                onclick="location.href='/Home/GoToCourse?CourseId=@course.CourseId'"
                                                style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                                                           border: none; border-radius: 12px; color: white;
                                                           transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
                                                           box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
                                                           position: relative; overflow: hidden;">
                                            <span class="position-relative z-1">
                                                @if (isRtl)
                                                {
                                                    <span>أبدأ الدوره</span>
                                                    <i class="fas fa-arrow-left @(isRtl ? "me-2" : "ms-2")"></i>
                                                }
                                                else
                                                {
                                                    <span>Go To Course</span>
                                                    <i class="fas fa-arrow-right @(isRtl ? "me-2" : "ms-2")"></i>
                                                }
                                            </span>
                                            <!-- Button shine effect -->
                                            <div class="position-absolute top-0 start-0 w-100 h-100"
                                                 style="background: linear-gradient(45deg, transparent 30%, rgba(255,255,255,0.2) 50%, transparent 70%);
                                                            transform: translateX(-100%); transition: transform 0.6s;"></div>
                                        </button>
                                    }

                                    else if (course.CourseEnrollments.Any(ce => ce.UserId == userId && ce.OrderStatus == 2))
                                    {
                                        <!--Pending button-->
                                        <a href="javascript:void(0);"
                                           class="btn flex-fill fw-semibold text-center text-decoration-none py-2"
                                           style="background: linear-gradient(135deg, #ffc107 0%, #ffca2c 100%);
                                                              border: none; border-radius: 12px; color: white;
                                                              transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
                                                              box-shadow: 0 4px 15px rgba(255, 193, 7, 0.4);
                                                              position: relative; overflow: hidden; cursor: not-allowed;">
                                            <span class="position-relative z-1">
                                                @if (isRtl)
                                                {
                                                    <span>قيد الانتظار</span>
                                                    <i class="fas fa-clock @(isRtl ? "me-2" : "ms-2")"></i>
                                                }
                                                else
                                                {
                                                    <span>Pending</span>
                                                    <i class="fas fa-clock @(isRtl ? "me-2" : "ms-2")"></i>
                                                }
                                            </span>
                                            <div class="position-absolute top-0 start-0 w-100 h-100"
                                                 style="background: linear-gradient(45deg, transparent 30%, rgba(255,255,255,0.2) 50%, transparent 70%);
                                                                    transform: translateX(-100%); transition: transform 0.6s;">
                                            </div>
                                        </a>


                                    }
                                    else
                                    {
                                        <!-- Enroll Button -->
                                        <a href="javascript:void(0);"
                                           onclick="openEnrollModal(@course.CourseId, @(course.Cost <= 0 ? "true" : "false"))"
                                           class="btn flex-fill fw-semibold text-center text-decoration-none py-2"
                                           style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
                                                              border: none; border-radius: 12px; color: white;
                                                              transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
                                                              box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
                                                              position: relative; overflow: hidden;">
                                            <span class="position-relative z-1">
                                                @if (isRtl)
                                                {
                                                    <span>سجّل الآن</span>
                                                    <i class="fas fa-user-plus @(isRtl ? "me-2" : "ms-2")"></i>
                                                }
                                                else
                                                {
                                                    <span>Enroll Now</span>
                                                    <i class="fas fa-user-plus @(isRtl ? "me-2" : "ms-2")"></i>
                                                }
                                            </span>
                                            <div class="position-absolute top-0 start-0 w-100 h-100"
                                                 style="background: linear-gradient(45deg, transparent 30%, rgba(255,255,255,0.2) 50%, transparent 70%);
                                                                    transform: translateX(-100%); transition: transform 0.6s;">
                                            </div>
                                        </a>

                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <!-- No Courses Available -->
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="fas fa-graduation-cap fa-4x text-muted mb-4"></i>
                        <h3 class="text-muted mb-3">
                            @if (isRtl)
                            {
                                <span>لا توجد دورات متاحة حالياً</span>
                            }
                            else
                            {
                                <span>No courses available at the moment</span>
                            }
                        </h3>
                        <p class="text-muted">
                            @if (isRtl)
                            {
                                <span>يرجى المحاولة مرة أخرى لاحقاً أو الاتصال بفريق الدعم</span>
                            }
                            else
                            {
                                <span>Please check back later or contact our support team</span>
                            }
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Category Selection Modal -->
<div class="modal fade category-modal" id="categoryModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title fw-bold" dir="@dirAttribute">
                    @if (isRtl)
                    {
                        <span><i class="fas fa-th-large me-3"></i>اختر الفئة</span>
                    }
                    else
                    {
                        <span><i class="fas fa-th-large me-3"></i>Select Category</span>
                    }
                </h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="modalCloseBtn" style="display: none;"></button>
            </div>
            <div class="modal-body">
                <div class="row g-4" id="categoriesGrid" dir="@dirAttribute">
                    <!-- Categories will be loaded here -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Enroll Modal -->
<div class="modal fade" id="enrollModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload Receipt</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="enrollModalBody">
                <!-- Partial view will be loaded here -->
            </div>
        </div>
    </div>
</div>


<style>
    .course-card {
        transition: all 0.3s ease;
        border-radius: 12px;
        overflow: hidden;
    }

        .course-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1) !important;
        }

            .course-card:hover .course-image {
                transform: scale(1.05);
            }

        .course-card .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 123, 255, 0.3);
        }

    .badge {
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .courses-section {
        min-height: 100vh;
    }

    /* RTL Specific Adjustments */
    [dir="rtl"] .fas {
        transform: scaleX(-1);
    }

    [dir="rtl"] .fa-arrow-right:before {
        content: "\f060"; /* Left arrow for RTL */
    }

    [dir="rtl"] .fa-arrow-left:before {
        content: "\f061"; /* Right arrow for RTL */
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .course-card

    {
        margin-bottom: 1.5rem;
    }

    .display-4 {
        font-size: 2rem;
    }

    .change-category-btn {
        position: static;
        transform: none;
        margin: 20px auto;
        display: block;
        width: fit-content;
    }

        .change-category-btn:hover {
            transform: scale(1.05);
        }

    .category-card {
        padding: 1.5rem 1rem;
    }

        .category-card .category-icon {
            font-size: 2rem;
        }

    .selected-category-indicator {
        position: static;
        transform: none;
        margin: 20px auto 0;
        display: block !important;
        width: fit-content;
    }

    }

    /* Enhanced hover effects */
    .card-body {
        transition: all 0.3s ease;
    }

    .course-card:hover .card-body {
        background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    }

    /* Custom scrollbar for RTL */
    [dir="rtl"]::-webkit-scrollbar {
        width: 8px;
    }

    [dir="rtl"]::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    [dir="rtl"]::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 4px;
    }
</style>

<style>
    /* Enhanced hover effects */
    .course-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15) !important;
    }

        .course-card:hover .course-image {
            transform: scale(1.08);
        }

        .course-card:hover .btn div {
            transform: translateX(100%) !important;
        }

    /* Button hover effects */
    .course-card .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.2);
    }

    /* Loading animation for image */
    .course-image {
        background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
        background-size: 200% 100%;
        animation: loading 1.5s infinite;
    }

    @@keyframes loading {
        0%

    {
        background-position: 200% 0;
    }

    100% {
        background-position: -200% 0;
    }

    }

    /* Responsive design improvements */
    @@media (max-width: 768px) {
        .course-card

    {
        margin-bottom: 2rem;
    }

    .course-card .btn {
        padding: 12px !important;
        font-size: 0.9rem;
    }

    }

    /* Modern glassmorphism effect */
    .course-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.8), transparent);
        z-index: 1;
    }

    /* Course filtering animation */
    .course-item {
        transition: all 0.5s ease;
    }

        .course-item.hide {
            opacity: 0;
            transform: scale(0.8);
            pointer-events: none;
        }

        .course-item.show {
            opacity: 1;
            transform: scale(1);
            pointer-events: auto;
        }

    /* Layout styles for consecutive vs grid display */
    .consecutive-layout {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

        .consecutive-layout .course-item {
            width: 100% !important;
            flex: none;
        }

        .consecutive-layout .course-card {
            display: flex;
            flex-direction: row;
            height: auto;
            max-width: 800px;
            margin: 0 auto;
        }

            .consecutive-layout .course-card .position-relative {
                flex: 0 0 300px;
                max-width: 300px;
            }

            .consecutive-layout .course-card .card-img-top,
            .consecutive-layout .course-card .card-img-top + div {
                height: 200px;
                width: 100%;
