@using TrandingSystem.Application.Dtos
@model IEnumerable<VideoDto>
@{
    ViewData["Title"] = "Videos";
    Layout = "~/Views/Shared/_LayoutDasbord.cshtml";
}
<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">@ViewData["Master"] /</span> @ViewData["Title"] </h4>

<div class="row mb-5">

@foreach(var video in Model){
        @* card one *@
        <div class="col-md-6 col-lg-4 mb-3">
            <div class="card h-100">
                <img class="card-img-top" src="@video.ImageVideoUrl" alt="Card image cap" />
                <div class="card-body">
                    <h5 class="card-title">@video.Title</h5>
                    <p class="card-text">
                        @video.Description
                    </p>
                    <a href="javascript:void(0)" class="btn btn-outline-info">عرض </a>
                    <a href="javascript:void(0)" class="btn btn-outline-warning">حظر</a>
                    <a href="javascript:void(0)" class="btn btn-outline-danger">حذف</a>
                    <hr />
                    
                </div>
            </div>
        </div>
}
   


</div>
