@using Microsoft.Extensions.Localization
@using TrandingSystem.Controllers
@inject IStringLocalizer<VideosController> Localizer
@{
    ViewData["Title"] = "About";
}
@model List<int>

<!-- Page Title -->
<div class="page-title" data-aos="fade">
    <div class="heading">
        <div class="container">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-lg-8">
                    <h1>@Localizer["AboutUs"]<br></h1>
                    <p class="mb-0">@Localizer["AboutUsBody"]</p>
                </div>
            </div>
        </div>
    </div>
    <nav class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="index.html">@Localizer["Home"]</a></li>
                <li class="current">@Localizer["AboutUs"]<br></li>
            </ol>
        </div>
    </nav>
</div><!-- End Page Title -->
<!-- About Section -->
<section id="about" class="about section">

    <div class="container">

        <div class="row gy-4">

            <div class="col-lg-6 order-1 order-lg-2" data-aos="fade-up" data-aos-delay="100">
                <img src="~/assets/img/about.jpg" class="img-fluid" alt="">
            </div>

            <div class="col-lg-6 order-2 order-lg-1 content" data-aos="fade-up" data-aos-delay="200">
                <h3>@Localizer["SecAbout1"]</h3>
                <p class="fst-italic">
                    @Localizer["SecAbout2"]
                </p>
                <ul>
                    <li><i class="bi bi-check-circle"></i> <span>@Localizer["SecAbout3"]</span></li>
                    <li><i class="bi bi-check-circle"></i> <span>@Localizer["SecAbout4"]</span></li>
                    <li><i class="bi bi-check-circle"></i> <span>@Localizer["SecAbout5"]</span></li>
                    <li><i class="bi bi-check-circle"></i> <span>@Localizer["SecAbout7"]</span></li>
                    <li><i class="bi bi-check-circle"></i> <span>@Localizer["SecAbout8"]</span></li>
                    <li><i class="bi bi-check-circle"></i> <span>@Localizer["SecAbout9"]</span></li>
                </ul>
                <a href="#" class="read-more"><span>@Localizer["SecAbout6"]</span><i class="bi bi-arrow-right"></i></a>
            </div>

        </div>

    </div>

</section><!-- /About Section -->
<!-- Counts Section -->
<section id="counts" class="section counts light-background">

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@Model[0]" data-purecounter-duration="1" class="purecounter"></span>
                    <p>@Localizer["Students"]</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@Model[1]" data-purecounter-duration="1" class="purecounter"></span>
                    <p>@Localizer["Courses"]</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@Model[2]" data-purecounter-duration="1" class="purecounter"></span>
                    <p>@Localizer["Events"]</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@Model[3]" data-purecounter-duration="1" class="purecounter"></span>
                    <p>@Localizer["Trainers"]</p>
                </div>
            </div><!-- End Stats Item -->

        </div>

    </div>

</section><!-- /Counts Section -->

<!-- Testimonials Section -->

<!-- Testimonials Section -->
<section id="testimonials" class="testimonials section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@Localizer["TrustMeTradingWithSaif"]</h2>
        <p>@Localizer["TradingWithSaifIntro"]</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="swiper init-swiper">
            <script type="application/json" class="swiper-config">
                {
                  "loop": true,
                  "speed": 600,
                  "autoplay": {
                    "delay": 5000
                  },
                  "slidesPerView": "auto",
                  "pagination": {
                    "el": ".swiper-pagination",
                    "type": "bullets",
                    "clickable": true
                  },
                  "breakpoints": {
                    "320": {
                      "slidesPerView": 1,
                      "spaceBetween": 40
                    },
                    "1200": {
                      "slidesPerView": 2,
                      "spaceBetween": 20
                    }
                  }
                }
            </script>
            <div class="swiper-wrapper">

                <!-- Expert Trading Courses -->
                <div class="swiper-slide">
                    <div class="testimonial-wrap">
                        <div class="testimonial-item">
                            <h3>@Localizer["ExpertTradingCoursesTitle"]</h3>
                            <p>
                                <span>@Localizer["ExpertTradingCoursesText"]</span>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Powerful Market Analysis -->
                <div class="swiper-slide">
                    <div class="testimonial-wrap">
                        <div class="testimonial-item">
                            <h3>@Localizer["PowerfulMarketAnalysisTitle"]</h3>
                            <p>
                                <span>@Localizer["PowerfulMarketAnalysisText"]</span>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Accurate Signals & Trade Setups -->
                <div class="swiper-slide">
                    <div class="testimonial-wrap">
                        <div class="testimonial-item">
                            <h3>@Localizer["AccurateSignalsTitle"]</h3>
                            <p>
                                <span>@Localizer["AccurateSignalsText"]</span>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- AI-Powered Trading Tools -->
                <div class="swiper-slide">
                    <div class="testimonial-wrap">
                        <div class="testimonial-item">
                            <h3>@Localizer["AIPoweredToolsTitle"]</h3>
                            <p>
                                <span>@Localizer["AIPoweredToolsText"]</span>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Personal Guidance & Mentorship -->
                <div class="swiper-slide">
                    <div class="testimonial-wrap">
                        <div class="testimonial-item">
                            <h3>@Localizer["PersonalGuidanceTitle"]</h3>
                            <p>
                                <span>@Localizer["PersonalGuidanceText"]</span>
                            </p>
                        </div>
                    </div>
                </div>

            </div>
            <div class="swiper-pagination"></div>
        </div>

    </div>

</section><!-- /Testimonials Section -->
