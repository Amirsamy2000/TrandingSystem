@{
    var course = ViewBag.Course;
}

<div class="modal-body">
    <form method="post" enctype="multipart/form-data" id="editCourseForm">
        <input type="hidden" name="CourseId" value="@course.CourseId" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="TitleEN" class="form-label">Course Title (EN)</label>
                <input type="text" class="form-control" id="TitleEN" name="TitleEN"
                       value="@course.TitleEN" required />
            </div>

            <div class="col-md-6 mb-3">
                <label for="TitleAR" class="form-label">Course Title (AR)</label>
                <input type="text" class="form-control" id="TitleAR" name="TitleAR"
                       value="@course.TitleAR" required />
            </div>

            <div class="col-md-6 mb-3">
                <label for="DescriptionEN" class="form-label">Description (EN)</label>
                <textarea class="form-control" id="DescriptionEN" name="DescriptionEN">@course.DescriptionEN</textarea>
            </div>

            <div class="col-md-6 mb-3">
                <label for="DescriptionAR" class="form-label">Description (AR)</label>
                <textarea class="form-control" id="DescriptionAR" name="DescriptionAR">@course.DescriptionAR</textarea>
            </div>

            <div class="col-md-6 mb-3">
                <label for="Cost" class="form-label">Cost</label>
                <input type="number" class="form-control" id="Cost" name="Cost"
                       value="@course.Cost" />
            </div>

            <div class="col-md-6 mb-3">
                <label for="CategoryId" class="form-label">Category</label>
                <input type="text" class="form-control" id="CategoryId" name="CategoryId"
                       value="@course.CategoryId" />
            </div>

            <div class="col-md-6 mb-3">
                <label for="ImageCourseUrl" class="form-label">Image URL</label>
                <input type="text" class="form-control" id="ImageCourseUrl" name="ImageCourseUrl"
                       value="@course.ImageCourseUrl" />
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Create Date</label>
                <input type="text" class="form-control" value="@course.CreateAt.ToString("yyyy-MM-dd HH:mm")" disabled />
            </div>

            <div class="col-md-4 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="IsLive" id="IsLive"
                           @(course.IsLive ? "checked" : "") />
                    <label class="form-check-label" for="IsLive">Is Live</label>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="IsFullyFree" id="IsFullyFree"
                           @(course.IsFullyFree ? "checked" : "") />
                    <label class="form-check-label" for="IsFullyFree">Is Fully Free</label>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="IsActive" id="IsActive"
                           @(course.IsActive ? "checked" : "") />
                    <label class="form-check-label" for="IsActive">Is Active</label>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="CommunityAutoCreate" id="CommunityAutoCreate"
                           @(course.CommunityAutoCreate ? "checked" : "") />
                    <label class="form-check-label" for="CommunityAutoCreate">Auto Community</label>
                </div>
            </div>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-primary">Update Course</button>
        </div>
    </form>
</div>
