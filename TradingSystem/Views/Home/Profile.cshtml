@using Microsoft.AspNetCore.Mvc.Localization
@using TrandingSystem.Application.Dtos
@inject IViewLocalizer Localizer

@model IEnumerable<KycUserDto>
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userProdileData = Model.FirstOrDefault();
    var totalorder = userProdileData?.CountRejectedOrders + userProdileData?.CountAcceptedOrders + userProdileData?.CountPandingOrders;
    var UserStatus = userProdileData.IsConfirmed ? Localizer["Confirmed"] : userProdileData.IsBlocketed ? Localizer["Blocked"] : Localizer["NotConfirm"];
    string PublicComm = Localizer["Public"].Value;

}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<link href="~/assets/css/profileuser.css" rel="stylesheet" />
<div class="profile-container mt-2">
    <!-- Profile Header Card -->
    <div class="profile-card">
        <div class="profile-header">
            <div class="profile-avatar-section">
                <div class="profile-avatar">
                    @(userProdileData.FullName[0])

                </div>
                <div class="profile-info">
                    <h2>@userProdileData.FullName</h2>
                    <p><i class="fas fa-envelope me-2"></i>@userProdileData.Email</p>
                    <p><i class="fas fa-phone me-2"></i>@userProdileData.PhoneNumber</p>
                    <div class="profile-badges">
                        <span class="badge-custom badge-verified">
                            <i class="fas fa-check-circle"></i>
                            @(UserStatus)
                        </span>

                    </div>
                </div>
            </div>

            <div class="profile-stats text-center ">
                <div class="stat-card">
                    <h3>@userProdileData.Courses.Count()</h3>
                    <p>@Localizer["Courses Enrolled"]</p>
                </div>
                <div class="stat-card">
                    <h3>@userProdileData.Communities.Count()</h3>
                    <p>@Localizer["Communities"]</p>
                </div>
                <div class="stat-card">
                    <h3>@totalorder</h3>
                    <p>@Localizer["Total order"]</p>
                </div>
                <div class="stat-card">
                    <h3>@userProdileData.TotalPaid</h3>
                    <p>@Localizer["Total Invested"]</p>
                </div>

            </div>
        </div>
    </div>

    <div class="row">
        <!-- Left Column -->
        <div class="col-lg-8">
            <!-- Personal Information -->
            <div class="profile-card">
                <div class="profile-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3 class="section-title">
                            <i class="fas fa-user"></i>
                            @Localizer["Personal Information"]
                        </h3>
                        <button class="btn edit-btn" onclick="UpdateProfileData()">
                            <i class="fas fa-edit me-2"></i>@Localizer["Edit Profile"]
                        </button>
                    </div>

                    <div class="info-group">
                        <div class="info-row">
                            <span class="info-label">
                                <i class="fas fa-user text-primary"></i>
                                @Localizer["Full Name"]
                            </span>
                            <span class="info-value">@userProdileData.FullName</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">
                                <i class="fas fa-id-card text-primary"></i>
                                @Localizer["National ID"]
                            </span>
                            <span class="info-value">@userProdileData.NationalId</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">
                                <i class="fas fa-calendar-alt text-primary"></i>
                                @Localizer["Join date"]
                            </span>
                            <span class="info-value">@(userProdileData.JoinDate)</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">
                                <i class="fas fa-envelope  text-primary"></i>
                                @Localizer["Email"]
                            </span>
                            <span class="info-value">@userProdileData.Email</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">
                                <i class="fas fa-mobile-alt  text-primary "></i>
                                @Localizer["mobile"]
                            </span>
                            <span class="info-value">@userProdileData.PhoneNumber</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Enrolled Courses -->
            <div class="profile-card">
                <div class="profile-body">
                    <h3 class="section-title">
                        <i class="fas fa-graduation-cap"></i>
                        @Localizer["Courses Enrolled"]
                    </h3>
                    @if (userProdileData.Courses.Any())
                    {
                        foreach (var cou in userProdileData.Courses)
                        {
                            <div class="course-card">
                                <div class="course-header">
                                    <h5 class="mb-1 text-white" >@cou.CourseName</h5>
                                    <small>@cou.CourseCost $</small>
                                </div>
                                <div class="course-body">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span> </span>
                                        <span class="fw-bold"></span>
                                    </div>
                                    <div class="progress-bar-custom">
                                        <div class="progress-fill" style="width: 85%"></div>
                                    </div>
                                    <div class="mt-3 d-flex justify-content-between align-items-center">
                                        @if (cou.CourseStatus == true)
                                        {
                                            <span class="badge bg-primary"> @Localizer["Active"]</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary"> @Localizer["NotActive"]</span>
                                        }
                                        <a class="btn btn-sm btn-outline-primary" asp-action="GoToCourse" asp-controller="Home" asp-route-CourseId="@cou.CourseId">
                                            <i class="fas fa-certificate me-1"></i>@Localizer["ViewVideos"]
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>


        </div>

        <!-- Right Column -->
        <div class="col-lg-4">
            <!-- Account Status -->
            <div class="profile-card">
                <div class="profile-body">
                    <h3 class="section-title">
                        <i class="fas fa-shield-alt"></i>
                        @Localizer["Account Status"]
                    </h3>

                    <div class="info-group">
                        <div class="info-row">
                            <span class="info-label">
                                <i class="fas fa-check-circle text-success"></i>
                                @Localizer["Email"]
                            </span>
                            <span class="badge bg-info"> @(UserStatus)</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">
                                <i class="fas fa-check-circle text-success"></i>
                                @Localizer["Phone Verified"]
                            </span>
                            <span class="badge bg-success">@Localizer["Yes"]</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">
                                <i class="fas fa-id-badge text-success"></i>
                                @Localizer["KYC Status"]
                            </span>
                            <span class="badge bg-success">@Localizer["Approved"]</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">
                                <i class="fas fa-crown text-warning"></i>
                                @Localizer["Membership"]
                            </span>
                            <span class="badge bg-warning text-dark"> @Localizer["User"]</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Communities -->
            <div class="profile-card">
                <div class="profile-body">
                    <h3 class="section-title">
                        <i class="fas fa-users"></i>
                        @Localizer["My Communities"]
                    </h3>
                    @if (userProdileData.Communities.Any())
                    {
                        foreach(var com in userProdileData.Communities)
                        {
                            <div class="community-card">
                                <div class="community-icon">
                                    <i class="fas fa-gem"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">@com.CommunityName</h6>
                                    
                                    @* <small class="text-muted">@(com.CourseName ?? PublicComm)</small> *@
                                </div>
                                @if (com.CommunityStatus == false)
                                            {
                                    <span class="badge bg-warning ">@Localizer["CommOpen"]</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@Localizer["CommClose"]</span>
                                }

                            </div>
                          
                        }

                        <a class="btn btn-outline-primary w-100 mt-3" href="/Communities/ShowCommunitiesForUser">
                            <i class="fas fa-plus me-2"></i>@Localizer["Go To Communities"]
                        </a>
                    }
                  

              
                </div>
            </div>

            <!-- Orders Summary -->
            <div class="profile-card">
                <div class="profile-body">
                    <h3 class="section-title">
                        <i class="fas fa-shopping-cart"></i>
                        @Localizer["Orders Summary"]
                    </h3>

                    <div class="info-group">
                        <div class="info-row">
                            <span class="info-label">
                                <i class="fas fa-check text-success"></i>
                                @Localizer["Accepted"]
                            </span>
                            <span class="badge bg-success">@userProdileData.CountAcceptedOrders</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">
                                <i class="fas fa-clock text-warning"></i>
                                @Localizer["Pending"]
                            </span>
                            <span class="badge bg-warning text-dark">@userProdileData.CountPandingOrders</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">
                                <i class="fas fa-times text-danger"></i>
                                @Localizer["Rejected"]
                            </span>
                            <span class="badge bg-danger">@userProdileData.CountRejectedOrders</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label fw-bold">
                                <i class="fas fa-shopping-bag"></i>
                                @Localizer["Total order"]
                            </span>
                            <span class="badge bg-primary">@totalorder</span>
                        </div>
                    </div>

                    <a class="btn btn-primary w-100 mt-3" href="#OrdersDetails">
                        <i class="fas fa-list me-2"></i>  @Localizer["View Details Orders"]
                    </a>
                </div>
            </div>

            <!-- Security Settings -->
            <div class="profile-card">
                <div class="profile-body">
                    <h3 class="section-title">
                        <i class="fas fa-lock"></i>
                        @Localizer["Security"]
                    </h3>

                    <a class="btn btn-outline-primary w-100 mb-2" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">
                        <i class="fas fa-key me-2"></i>@Localizer["Change Password"]
                    </a>
                   
                     
                     
                        <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                        <button  class="btn btn-outline-danger w-100" type="submit"><i class="fas fa-sign-out-alt me-2"></i>@Localizer["Logout"]</button>
                        </form>
                        
                   
                </div>
            </div>
        </div>
        <div class="col-12" id="OrdersDetails">
            <div class="profile-card" >
                <div class="profile-body">
            <div class="card accordion-item mb-4" id="accordion-@userProdileData.Id">
                <h2 class="accordion-header" id="heading-@userProdileData.Id">
                    <button type="button" class="accordion-button collapsed p-2"
                            data-bs-toggle="collapse"
                            data-bs-target="#collapse-@userProdileData.Id"
                            aria-expanded="false"
                            aria-controls="collapse-@userProdileData.Id">
                                <h4 style="color:#c3972e"> @Localizer["Detilas of Orders"]</h4

                    </button>
                </h2>
                <div id="collapse-@userProdileData.Id"
                     class="accordion-collapse "
                     aria-labelledby="heading-@userProdileData.Id"
                     data-bs-parent="#accordionExample">
                    <div class="accordion-body table-responsive">

                        
                        <table class="table table-hover table-bordered KycTable">

                            <thead>
                                        <tr ">

                                    <th class="table-header-cutome">@Localizer["OrderDate"]</th>
                                    <th class="table-header-cutome">@Localizer["OrderType"]</th>
                                    <th class="table-header-cutome">@Localizer["Ordername"]</th>
                                    <th class="table-header-cutome">@Localizer["OrderCost"] </th>
                                    <th class="table-header-cutome">@Localizer["OrderStatus"] </th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (userProdileData.Orders.Any())
                                {
                                    @foreach (var order in userProdileData.Orders)
                                    {
                                        if (order != null)
                                        {

                                            <tr class="text-center">
                                                <td>
                                                    @(order?.CreatedAt ?? DateTime.Now)
                                                </td>

                                                @if (order.OrderByType == 0)
                                                {
                                                    <td>
                                                        @Localizer["OrderTypeMessageCourse"]
                                                    </td>
                                                    <td>
                                                        @(order?.CourseName ?? " ")
                                                    </td>

                                                    <td>
                                                        @(order?.CostCourse ?? 0)
                                                    </td>

                                                }
                                                else if (order.OrderByType == 1)
                                                {
                                                    <td>
                                                        @Localizer["OrderTypeMessageVideo"]
                                                    </td>
                                                    <td>
                                                        @(order?.VideoName ?? " ")
                                                    </td>

                                                    <td>
                                                        @(order?.VideoCost ?? 0)
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        @Localizer["OrderTypeMessageLive"]
                                                    </td>
                                                    <td>
                                                        @(order?.LiveName ?? " ")
                                                    </td>
                                                    <td>
                                                        @(order?.LiveCost ?? 0)
                                                    </td>
                                                }

                                                <td>
                                                    @if (order?.OrderStatus == 2)
                                                    {
                                                        <span class="badge bg-warning text-dark">@Localizer["Pending"]</span>
                                                    }
                                                    else if (order?.OrderStatus == 1)
                                                    {
                                                        <span class="badge bg-success">@Localizer["Accepted"]</span>
                                                    }
                                                    else if (order?.OrderStatus == 0)
                                                    {
                                                        <span class="badge bg-danger">@Localizer["Rejected"]</span>
                                                    }
                                                </td>
                                            </tr>

                                        }

                                    }

                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
                </div>

            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="mainModalEditUser" tabindex="-1" aria-labelledby="mainModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="mainModalLabel">@Localizer["Edit Profile"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="ContentPageEditProfile">
              
            </div>
        </div>
    </div>
 
 

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(function () {
            $.validator.unobtrusive.parse("#editUserForm");
        });

        function UpdateProfileData(){
            $.ajax({
                url:"/Home/EditUser",
                type:"GET",
                success:function(data){
                    $('#ContentPageEditProfile').html(data);
                    $('#mainModalEditUser').modal('show');
                },
                Error:function(data){
                    $('#ContentPageEditProfile').html(data);
                    
                }
            })
        }


 
    </script>
}

