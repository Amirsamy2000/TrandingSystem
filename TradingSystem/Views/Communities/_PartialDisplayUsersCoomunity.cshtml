@using Microsoft.Extensions.Localization
@using TrandingSystem.Application.Dtos
@using TrandingSystem.Controllers
@inject IStringLocalizer<CommunitiesController> Localizer
@model IEnumerable<UserDto>

@if (Model == null || !Model.Any())
{
    <div class="col-12">
        <div class="alert alert-primary" role="alert">
            <h4 class="alert-heading text-center">@Localizer["NoUserFound"]</h4>
            <br />
            <p class="text-center">@Localizer["NoUserMessage1"]</p>
        </div>
    </div>
}
else
{
    <style>
        #CommunityTable thead th {
            text-align: center;
            vertical-align: middle;
        }

        .dataTables_filter input {
            padding: 6px 10px;
            border-radius: 8px;
            border: 1px solid #ccc;
            width: 250px;
            font-size: 14px;
        }

        .dt-button, .custom-btn {
            background-color: #007bff !important;
            color: white !important;
            padding: 6px 12px;
            border-radius: 6px;
            border: none;
            font-size: 14px;
            margin-left: 5px;
            cursor: pointer;
        }

            .dt-button:hover, .custom-btn:hover {
                background-color: #0056b3 !important;
            }

        .dataTables_length select {
            padding: 8px !important;
            background-color: #007bff !important;
            color: white !important;
        }

        #OrdersTable_filter label::before {
            content: "" !important;
        }

        #OrdersTable_filter label {
            font-size: 0 !important;
        }

        #OrdersTable_filter input {
            font-size: 14px !important;
        }
    </style>

    <div class="col-12 text-center mb-2 text-primary" id="headerUsrCommunity"
         style="font-size:22px;font-weight:600">
        @Localizer["members"] @ViewBag.CommunityName
    </div>

    <div class="col-12 mb-3 mt-1">
        <button class="btn btn-outline-danger me-2"
                onclick="CheckConfirmAction('@Localizer["RemoveMessage"]', DeleteSelectedUsers)">
            <i class='menu-icon tf-icons bx bx-trash'></i>
            @Localizer["RemoveUser"]
        </button>

        <button class="btn btn-outline-warning me-2"
                onclick="CheckConfirmAction('@Localizer["BlockMessage"]', BlockOrActiveSelectedUsers, true)">
            <i class='menu-icon tf-icons bx bx-block'></i>
            @Localizer["BlockUser"]
        </button>

        <button class="btn btn-outline-success me-2"
                onclick="CheckConfirmAction('@Localizer["ActiveMessage"]', BlockOrActiveSelectedUsers, false)">
            <i class='menu-icon tf-icons bx bx-refresh'></i>
            @Localizer["UnBlockUser"]
        </button>
    </div>

    <div class="col-12">
        <table class="table table-hover table-bordered text-center" id="UsersCommunityTable">
            <thead>
                <tr class="table-info">
                    <th><input type="checkbox" id="selectAll" onchange="toggleSelection(this)" /></th>
                    <th>@Localizer["UserName"]</th>
                    <th>@Localizer["Email"]</th>
                    <th>@Localizer["Mobile"]</th>
                    <th>@Localizer["NationalId"]</th>
                    <th>@Localizer["IsBlockedUser"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td><input type="checkbox" class="userCheck" value="@user.Id" onchange="toggleSelection(this)" /></td>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.Mobile</td>
                        <td>@(user.NationalId ?? "UN")</td>
                        @if (user.IsBlockedCommunity??false){
                              <td class="text-danger">
                            @Localizer["Blocked"]  
                        </td>
                        }
                        else{
                            <td class="text-success">
                                  @Localizer["Active"] 
                            </td>
                        }
                      
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<script>
    var selectedCommunityUsers = [];

    // init DataTable
    $('#UsersCommunityTable').DataTable({
        pageLength: 5,
        lengthMenu: [[5, 10, 25, -1], [5, 10, 25, "All"]],
        language: { lengthMenu: "_MENU_" },
        ordering: true,
        order: [[1, 'asc']],
        responsive: true,
        dom: 'Blfrtip',
        buttons: ['copy', 'excel', 'print']
    });

    // checkbox selection
    function toggleSelection(checkbox) {
        const allCheckboxes = document.querySelectorAll(".userCheck");
        const selectAll = document.getElementById("selectAll");

        if (checkbox.id === "selectAll") {
            selectedCommunityUsers = [];
            allCheckboxes.forEach(cb => {
                cb.checked = checkbox.checked;
                if (checkbox.checked) {
                    selectedCommunityUsers.push(parseInt(cb.value));
                }
            });
        } else {
            const value = parseInt(checkbox.value);
            if (checkbox.checked) {
                if (!selectedCommunityUsers.includes(value)) {
                    selectedCommunityUsers.push(value);
                }
            } else {
                selectedCommunityUsers = selectedCommunityUsers.filter(v => v !== value);
            }
            selectAll.checked = Array.from(allCheckboxes).every(cb => cb.checked);
        }

        console.log("Selected Users:", selectedCommunityUsers);
    }

    // validation
    function VaildBeforeMakeAction() {
        Swal.fire({
            icon: 'error',
            title: '@Localizer["NotSelectdUser"]'
        });
    }

    // sweetalert wrapper
    function CheckConfirmAction(title, callback, ...params) {
        if (selectedCommunityUsers.length <= 0) {
            VaildBeforeMakeAction();
            return;
        }

        Swal.fire({
            title: title,
             confirmButtonText: '@Localizer["OkBtn"]',
            cancalButtonText: '@Localizer["CancleBtn"]'
        }).then((result) => {
            if (result.isConfirmed && typeof callback === "function") {
                callback(...params);
            }
        });
    }

    // delete
    function DeleteSelectedUsers() {
        $.ajax({
            url: "/Communities/SubmitDeleteUserFormCommunity",
            type: "POST",
            data: {
                UserIds: selectedCommunityUsers,
                CommunityId: "@ViewBag.Communityid"
            },
            success: function (res) {
                debugger
                Swal.fire({
                    icon: res.success ? 'success' : 'error',
                    title: res.message,
                    draggable: true
                });
                if (res.success) {

                    let Courseid = $("#Course").val();
                    LoadingCommunities(Courseid);
                    $("#UsersCommunity").html('')
                }
            },
            error: function (res) {
                Swal.fire({
                    icon: 'error',
                    title: res.message
                });
            }
        });
    }

    // block / unblock
    function BlockOrActiveSelectedUsers(IsBlock) {
        $.ajax({
            url: "/Communities/SubmitBlockOrActiveUserFormCommunity",
            type: "POST",
            data: {
                UserIds: selectedCommunityUsers,
                CommunityId: "@ViewBag.Communityid",
                IsBlock: IsBlock
            },
            success: function (res) {
                 Swal.close();
                Swal.fire({
                    icon: res.success ? 'success' : 'error',
                    title: res.message,
                    draggable: true
                });
                if (res.success) {
                    let Courseid = $("#Course").val();
                    LoadingCommunities(Courseid);
                      $("#UsersCommunity").html("")
                }
            },
            error: function (res) {
                Swal.fire({
                    icon: 'error',
                    title: res.message
                });
            }
        });
    }
</script>
