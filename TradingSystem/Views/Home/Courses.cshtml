@using TrandingSystem.Application.Dtos
@inject IHttpContextAccessor HttpContextAccessor
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<CourseDto>

@{
    var currentUICulture = System.Threading.Thread.CurrentThread.CurrentUICulture;
    var requestCulture = HttpContextAccessor.HttpContext.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture.Culture.Name;

    ViewData["Title"] = "Courses";
    var isRtl = currentCulture == "ar" ? true : false; //ViewBag.language_code == 2;
    var dirAttribute = isRtl ? "rtl" : "ltr";
    var textAlign = isRtl ? "text-end" : "text-start";
    var textAlignReverse = isRtl ? "text-start" : "text-end";
    var marginStart = isRtl ? "me-auto" : "ms-auto";
    var marginEnd = isRtl ? "ms-auto" : "me-auto";
    var paddingStart = isRtl ? "pe-3" : "ps-3";
    var paddingEnd = isRtl ? "ps-3" : "pe-3";
    var borderStart = isRtl ? "border-end" : "border-start";
}

<section class="courses-section py-5 bg-light" dir="@dirAttribute">
    <div class="container">
        <!-- Page Header -->
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold text-primary mb-3">
                    @if (isRtl)
                    {
                        <span>الدورات المتاحة</span>
                    }
                    else
                    {
                        <span>Available Courses</span>
                    }
                </h1>
                <p class="lead text-muted">
                    @if (isRtl)
                    {
                        <span>اكتشف مجموعتنا الواسعة من الدورات التدريبية المتخصصة</span>
                    }
                    else
                    {
                        <span>Discover our comprehensive collection of specialized training courses</span>
                    }
                </p>
            </div>
        </div>

        <!-- Courses Grid -->
        <div class="row g-4">
            @if (Model != null && Model.Any())
            {
                @foreach (var course in Model)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0 course-card">
                            <!-- Course Image -->
                            <div class="position-relative overflow-hidden">
                                @if (!string.IsNullOrEmpty(course.ImageCourseUrl))
                                {
                                    <img src="@course.ImageCourseUrl"
                                         class="card-img-top course-image"
                                         alt="@(isRtl ? (course.TitleAR ?? course.TitleEN ?? "صورة الدورة") : (course.TitleEN ?? course.TitleAR ?? "Course Image"))"
                                         style="height: 200px; object-fit: cover; transition: transform 0.3s ease;">
                                }
                                else
                                {
                                    <div class="card-img-top d-flex align-items-center justify-content-center bg-secondary text-white"
                                         style="height: 200px;">
                                        <i class="fas fa-graduation-cap fa-3x opacity-50"></i>
                                    </div>
                                }

                                <!-- Category Badge -->
                                @if (!string.IsNullOrEmpty(course.categoryName))
                                {
                                    <div class="position-absolute top-0 @(isRtl ? "start-0" : "end-0") m-3">
                                        <span class="badge bg-primary px-3 py-2 rounded-pill">
                                            @course.categoryName
                                        </span>
                                    </div>
                                }

                                <!-- Cost Badge -->
                                @if (course.Cost != 0)
                                {
                                    <div class="position-absolute bottom-0 @(isRtl ? "end-0" : "start-0") m-3">
                                        <span class="badge bg-success px-3 py-2 rounded-pill fw-bold">
                                            @if (isRtl)
                                            {
                                                <span>@course.Cost.ToString("C") ر.س</span>
                                            }
                                            else
                                            {
                                                <span>$@course.Cost.ToString("F2")</span>
                                            }
                                        </span>
                                    </div>
                                }
                                else
                                {
                                    <div class="position-absolute bottom-0 @(isRtl ? "end-0" : "start-0") m-3">
                                        <span class="badge bg-success px-3 py-2 rounded-pill fw-bold">
                                            @if (isRtl)
                                            {
                                                <span>مجاني</span>
                                            }
                                            else
                                            {
                                                <span>Free</span>
                                            }
                                        </span>
                                    </div>
                                }
                            </div>

                            <div class="card-body d-flex flex-column @paddingStart @paddingEnd">
                                <!-- Course Title -->
                                <h5 class="card-title fw-bold text-dark mb-3 @textAlign">
                                    @if (isRtl)
                                    {
                                        <span>@(course.TitleAR ?? course.TitleAR ?? "عنوان الدورة غير متوفر")</span>
                                    }
                                    else
                                    {
                                        <span>@(course.TitleEN ?? course.TitleAR ?? "Course Title Not Available")</span>
                                    }
                                </h5>

                                <!-- Course Description -->
                                <p class="card-text text-muted flex-grow-1 @textAlign" style="line-height: 1.6;">
                                    @if (isRtl)
                                    {
                                        var description = course.DescriptionAR ?? course.DescriptionEN ?? "وصف الدورة غير متوفر في الوقت الحالي";
                                        if (description.Length > 120)
                                        {
                                            <span>@(description.Substring(0, 120))...</span>
                                        }
                                        else
                                        {
                                            <span>@description</span>
                                        }
                                    }
                                    else
                                    {
                                        var description = course.DescriptionEN ?? course.DescriptionAR ?? "Course description is not available at the moment";
                                        if (description.Length > 120)
                                        {
                                            <span>@(description.Substring(0, 120))...</span>
                                        }
                                        else
                                        {
                                            <span>@description</span>
                                        }
                                    }
                                </p>

                                <!-- Course Info Footer -->
                                <div class="mt-auto pt-3 border-top">
                                    <div class="row align-items-center g-0">
                                        <div class="col">
                                            @if (!string.IsNullOrEmpty(course.categoryName))
                                            {
                                                <small class="text-muted @textAlign">
                                                    <i class="fas fa-tag @(isRtl ? "ms-1" : "me-1")"></i>
                                                    @course.categoryName
                                                </small>
                                            }
                                        </div>
                                        <div class="col-auto">
                                            @if (course.Cost != 0)
                                            {
                                                <div class="@textAlignReverse">
                                                    <span class="h6 text-success fw-bold mb-0">
                                                        @if (isRtl)
                                                        {
                                                            <span>@course.Cost.ToString("N0") ر.س</span>
                                                        }
                                                        else
                                                        {
                                                            <span>$@course.Cost.ToString("N2")</span>
                                                        }
                                                    </span>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="@textAlignReverse">
                                                    <span class="h6 text-success fw-bold mb-0">
                                                        @if (isRtl)
                                                        {
                                                            <span>مجاني</span>
                                                        }
                                                        else
                                                        {
                                                            <span>Free</span>
                                                        }
                                                    </span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- Action Button -->
                                <div class="mt-3">
                                    <button class="btn btn-primary w-100 fw-semibold"
                                            style="transition: all 0.3s ease;" onclick="location.href='/Home/CoursesDetails'">
                                        @if (isRtl)
                                        {
                                            <span>عرض التفاصيل</span>
                                            <i class="fas fa-arrow-left @(isRtl ? "me-2" : "ms-2")"></i>
                                        }
                                        else
                                        {
                                            <span>View Details</span>
                                            <i class="fas fa-arrow-right @(isRtl ? "me-2" : "ms-2")"></i>
                                        }
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <!-- No Courses Available -->
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="fas fa-graduation-cap fa-4x text-muted mb-4"></i>
                        <h3 class="text-muted mb-3">
                            @if (isRtl)
                            {
                                <span>لا توجد دورات متاحة حالياً</span>
                            }
                            else
                            {
                                <span>No courses available at the moment</span>
                            }
                        </h3>
                        <p class="text-muted">
                            @if (isRtl)
                            {
                                <span>يرجى المحاولة مرة أخرى لاحقاً أو الاتصال بفريق الدعم</span>
                            }
                            else
                            {
                                <span>Please check back later or contact our support team</span>
                            }
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    .course-card {
        transition: all 0.3s ease;
        border-radius: 12px;
        overflow: hidden;
    }

    .course-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1) !important;
    }

    .course-card:hover .course-image {
        transform: scale(1.05);
    }

    .course-card .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 123, 255, 0.3);
    }

    .badge {
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .courses-section {
        min-height: 100vh;
    }

    /* RTL Specific Adjustments */
    [dir="rtl"] .fas {
        transform: scaleX(-1);
    }

    [dir="rtl"] .fa-arrow-right:before {
        content: "\f060"; /* Left arrow for RTL */
    }

    [dir="rtl"] .fa-arrow-left:before {
        content: "\f061"; /* Right arrow for RTL */
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .course-card {
            margin-bottom: 1.5rem;
        }

        .display-4 {
            font-size: 2rem;
        }
    }

    /* Enhanced hover effects */
    .card-body {
        transition: all 0.3s ease;
    }

    .course-card:hover .card-body {
        background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    }

    /* Custom scrollbar for RTL */
    [dir="rtl"]::-webkit-scrollbar {
        width: 8px;
    }

    [dir="rtl"]::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    [dir="rtl"]::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 4px;
    }
</style>

<!-- Font Awesome CDN for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

@section Scripts {
    <script>
        // Add smooth scroll behavior and enhanced interactions
        document.addEventListener('DOMContentLoaded', function() {
            // Add loading animation
            const cards = document.querySelectorAll('.course-card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    card.style.transition = 'all 0.6s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
}