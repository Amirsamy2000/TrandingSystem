        $(document).ready(function() {
            // Set default create date to now
            const now = new Date();
            now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
            $('#createAt').val(now.toISOString().slice(0, 16));

            // Load categories via AJAX
            loadCategories();
                    let initialImageUrl = "@course.ImageCourseUrl";

            let file = null;

            // Show existing image if available
            if (initialImageUrl) {
                $('#imagePreview').attr('src', initialImageUrl).show();
            }

            // Image preview functionality
            $('#CourseImage').on('change', function() {
                file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#imagePreview').attr('src', e.target.result).show();
                    };
                    reader.readAsDataURL(file);
                } else {
                    $('#imagePreview').hide();
                }
            });


            // Form submission
            $('#courseCreateForm').on('submit', function(e) {
                e.preventDefault();

                if (this.checkValidity() === false) {
                    e.stopPropagation();
                    $(this).addClass('was-validated');
                    return;
                }

                submitCourse();
            });
        });

