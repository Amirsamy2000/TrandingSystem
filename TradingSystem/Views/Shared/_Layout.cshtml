    <!-- Vendor JS Files -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let currentPath = window.location.pathname.toLowerCase();
            let links = document.querySelectorAll("#navmenu a");

            links.forEach(link => {
                let linkPath = new URL(link.href).pathname.toLowerCase();
                if (linkPath === currentPath) {
                    links.forEach(l => l.classList.remove("active")); // يشيل active من الكل
                    link.classList.add("active"); // يضيف active على اللينك الحالي
                }
            });
        });
    </script>


