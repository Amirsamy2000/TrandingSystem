@section Scripts {
    <script>
        let categories = [];
        let selectedCategory = 'All';
        const isRtl = @Json.Serialize(isRtl);

        // Category icons mapping
        const categoryIcons = {
            'Programming': 'fas fa-code',
            'Design': 'fas fa-palette',
            'Marketing': 'fas fa-bullhorn',
            'Business': 'fas fa-briefcase',
            'Technology': 'fas fa-laptop-code',
            'Language': 'fas fa-language',
            'Science': 'fas fa-flask',
            'Mathematics': 'fas fa-calculator',
            'Health': 'fas fa-heartbeat',
            'Education': 'fas fa-graduation-cap',
            'Arts': 'fas fa-paint-brush',
            'Music': 'fas fa-music',
            'Sports': 'fas fa-running',
            'Cooking': 'fas fa-utensils',
            'Photography': 'fas fa-camera',
            'Writing': 'fas fa-pen-fancy',
            'Finance': 'fas fa-chart-line',
            'Law': 'fas fa-balance-scale',
            'Engineering': 'fas fa-cogs',
            'Medicine': 'fas fa-stethoscope',
            'All': 'fas fa-th'
        };

        // Get icon for category
        function getCategoryIcon(categoryName) {
            for (let key in categoryIcons) {
                if (categoryName.toLowerCase().includes(key.toLowerCase())) {
                    return categoryIcons[key];
                }
            }
            return 'fas fa-folder'; // Default icon
        }

        // Load categories from API
        async function loadCategories() {
            try {
                debugger
                const response = await fetch('/Categories/Read');
                const data = await response.json();
                categories = data.data;
                renderCategories();
            } catch (error) {
                console.error('Error loading categories:', error);
                // Fallback: show only "All" option
                categories = [];
                renderCategories();
            }
        }

        // Render categories in modal
        function renderCategories() {
            const grid = document.getElementById('categoriesGrid');
            let html = '';

            // Add "All" category card
            html += `
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="category-card all-category" onclick="selectCategory('All', '${isRtl ? 'جميع الدورات' : 'All Courses'}')">
                        <i class="category-icon fas fa-th"></i>
                        <h6 class="category-name">${isRtl ? 'جميع الدورات' : 'All Courses'}</h6>
                    </div>
                </div>
            `;

            // Add category cards
            categories.forEach(category => {
                const categoryName = isRtl ? (category.CategoryNameAr || category.CategoryNameEn) : (category.CategoryNameEn || category.CategoryNameAr);
                const iconClass = getCategoryIcon(categoryName);

                html += `
                    <div class="col-6 col-md-4 col-lg-3">
                        <div class="category-card" onclick="selectCategory('${category.CategoryNameEn || category.CategoryNameAr}', '${categoryName}')">
                            <i class="category-icon ${iconClass}"></i>
                            <h6 class="category-name">${categoryName}</h6>
                        </div>
                    </div>
                `;
            });

            grid.innerHTML = html;

            // Animate cards appearance
            setTimeout(() => {
                const cards = document.querySelectorAll('.category-card');
                cards.forEach((card, index) => {
                    setTimeout(() => {
                        card.classList.add('show');
                    }, index * 100);
                });
            }, 100);
        }

        // Select category and filter courses
        function selectCategory(categoryValue, categoryDisplayName) {
            selectedCategory = categoryValue;

            // Update selected category indicator
            const indicator = document.getElementById('selectedCategoryIndicator');
            const indicatorText = document.getElementById('selectedCategoryText');

            indicatorText.textContent = categoryDisplayName;
            indicator.style.display = 'block';

            // Show close button after first selection
            document.getElementById('modalCloseBtn').style.display = 'block';

            // Filter courses
            filterCourses(categoryValue);

            // Close modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('categoryModal'));
            modal.hide();

            // Animate course section
            const coursesSection = document.getElementById('coursesSection');
            coursesSection.classList.add('fade-out');

            setTimeout(() => {
                coursesSection.classList.remove('fade-out');
                coursesSection.classList.add('fade-in');
            }, 300);
        }

        // Filter courses based on selected category
        function filterCourses(category) {
            const courseItems = document.querySelectorAll('.course-item');

            courseItems.forEach((item, index) => {
                const courseCategory = item.getAttribute('data-category');

                if (category === 'All' || courseCategory === category) {
                    // Show course with animation delay
                    setTimeout(() => {
                        item.classList.remove('hide');
                        item.classList.add('show');
                    }, index * 50);
                } else {
                    // Hide course
                    item.classList.remove('show');
                    item.classList.add('hide');
                }
            });
        }

        // Open category modal
        function openCategoryModal() {
            const modal = new bootstrap.Modal(document.getElementById('categoryModal'));

            // Reset category cards animation
            const cards = document.querySelectorAll('.category-card');
            cards.forEach(card => {
                card.classList.remove('show');
            });

            modal.show();

            // Animate cards when modal is shown
            setTimeout(() => {
                renderCategories();
            }, 200);
        }

        // Open enroll modal (existing function)
        function openEnrollModal(courseId, IsFree) {
            fetch(`/Course/UploadReceiptPartial?courseId=${courseId}&IsFree=${IsFree}`)
                .then(response => response.text())
                .then(html => {
                    document.getElementById("enrollModalBody").innerHTML = html;
                    let modal = new bootstrap.Modal(document.getElementById("enrollModal"));
                    modal.show();
                });
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            // Load categories and show modal automatically
            loadCategories().then(() => {
                // Show category modal on page load
                setTimeout(() => {
                    openCategoryModal();
                }, 500);
            });

            // Add loading animation for existing course cards
            const cards = document.querySelectorAll('.course-card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    card.style.transition = 'all 0.6s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });

            // Handle modal events
            const categoryModal = document.getElementById('categoryModal');
            categoryModal.addEventListener('hidden.bs.modal', function () {
                // If no category was selected, default to "All"
                if (selectedCategory === '') {
                    selectCategory('All', isRtl ? 'جميع الدورات' : 'All Courses');
                }
            });

            // Add smooth scrolling
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });

            // Add intersection observer for course cards
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, { threshold: 0.1 });

            cards.forEach(card => {
                observer.observe(card);
            });
        });

        // Add responsive behavior
        window.addEventListener('resize', function() {
            // Adjust modal size on mobile
            const modal = document.querySelector('.category-modal .modal-dialog');
            if (window.innerWidth < 768) {
                modal.classList.add('modal-fullscreen-sm-down');
            } else {
                modal.classList.remove('modal-fullscreen-sm-down');
            }
        });

        // Add keyboard navigation for accessibility
        document.addEventListener('keydown', function(e) {
            // Open category modal with 'C' key
            if (e.key === 'c' || e.key === 'C') {
                if (!document.querySelector('.modal.show')) {
                    openCategoryModal();
                }
            }

            // Close modal with Escape key
            if (e.key === 'Escape') {
                const modal = bootstrap.Modal.getInstance(document.getElementById('categoryModal'));
                if (modal) {
                    modal.hide();
                }
            }
        });

        // Add loading state management
        function showLoadingState() {
            const coursesGrid = document.getElementById('coursesGrid');
            coursesGrid.style.opacity = '0.6';
            coursesGrid.style.pointerEvents = 'none';
        }

        function hideLoadingState() {
            const coursesGrid = document.getElementById('coursesGrid');
            coursesGrid.style.opacity = '1';
            coursesGrid.style.pointerEvents = 'auto';
        }

        // Performance optimization: Debounce filter function
        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        // Optimized filter function
        const debouncedFilter = debounce(filterCourses, 100);

    </script>
