@using Microsoft.Extensions.Localization
@using TrandingSystem.Application.Dtos
@using TrandingSystem.Controllers
@model IEnumerable<CommunitiesDto>
@inject IStringLocalizer<CommunitiesController> Localizer
@{
    ViewData["Title"] = "ShowCommunitiesForUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title aos-init aos-animate" data-aos="fade">
    <div class="heading">
        <div class="container">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-lg-8">
                    <h1>@Localizer["Comms"]<br></h1>
                    <p class="mb-0">
                        @Localizer["CommsBodey"]
                    </p>  
                </div>
            </div>
        </div>
    </div>
    <nav class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="index.html">@Localizer["Home"]</a></li>
                <li class="current">@Localizer["Comms"]<br></li>
            </ol>
        </div>
    </nav>
</div>
@if (Model.Count() == 0 || Model is null)
{

}
else
{
       

    <style>
             .custom-card {
                 transition: all 0.3s ease-in-out;
                 box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
                 border-radius: 12px;
             }

                 .custom-card:hover {
                     background: #141921;
                     color: #ffffff;
                     transform: translateY(-5px);
                     box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
                 }

                     .custom-card:hover .card-title,
                     .custom-card:hover .card-text,
                     .custom-card:hover small {
                         color: #ffffff !important;
                     }

                     .custom-card:hover b {
                         color: #ffffff !important;
                     }

             .card-border-c {
                 border-bottom-color: #c3972e;
                 border-bottom-style: solid;
                 border-bottom-width: 5px;
             }
    </style>

   
    <section id="features" class="features section" style="min-height:400px">

        <div class="container p-4">

            <div class="row gy-4">
                @foreach (var comm in Model)
                {
                    if (!(bool)comm.IsClosed)
                    {
                        <div class="col-lg-4 col-md-6 mb-4 aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
                            <a href="/Chat/Room/@comm.CommunityId" class="text-decoration-none">
                                <div class="card custom-card h-100 border-0">
                                    <div class="card-body d-flex flex-column card-border-c">
                                        <!-- Icon + Title -->
                                        <div class="d-flex align-items-center mb-3">
                                            <i class="bi bi-chat-dots-fill fs-3 me-2" style="color: #ffbb2c;"></i>
                                            <h5 class="card-title mb-0 title-truncate hover-card-h">@comm.Title</h5>
                                        </div>

                                        <!-- Last message -->
                                        <p class="card-text text-muted mb-1 message-truncate">
                                            <b>@comm.Sender:</b> @comm.LastMessage
                                        </p>

                                        <!-- Date -->
                                        <small class="text-muted mt-auto">
                                            @comm.LastMessageTime?.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="col-lg-4 col-md-6 mb-4 aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
                            <a class="text-decoration-none">
                                <div class="card custom-card h-100 border-0">
                                    <div class="card-body d-flex flex-column card-border-c">
                                        <!-- Icon + Title -->
                                        <div class="d-flex align-items-center mb-3">
                                            <i class="bi bi-chat-dots-fill fs-3 me-2" style="color: red;"></i>
                                            <h5 class="card-title mb-0 title-truncate">@comm.Title</h5>
                                        </div>

                                        <!-- Last message -->
                                        <p class="card-text text-muted mb-1 message-truncate alert alert-danger">
                                            @Localizer["CommunityIsClose"]
                                        </p>

                                        <!-- Date -->
                                        
                                    </div>
                                </div>
                            </a>
                        </div>
                    }

                }

            </div>
        </div>
    </section>
}


